@page "/editstudent/{id}"

<EditForm Model="@Student" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator/>
    <h3>Edit Employee</h3>
    <hr>
    <div class="form-group row">
        <label for="studentID" class="col-sm-2 col-form-label">
            Nim
        </label>
        <div class="col-sm-10">
            <Input disabled=true id="studentID" class="form-control" placeholder="Nim..." value="@Student.studentID"/>
            <ValidationMessage For = "@(()=>Student.studentID)"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            Nama Depan
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name" @bind-Value="Student.firstName"/>
            <ValidationMessage For = "@(()=>Student.firstName)"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Nama Belakang
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Nama Belakang...." @bind-Value="Student.lastName"/>
            <ValidationMessage For = "@(()=>Student.lastName)"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="enrollmentDate" class="col-sm-2 col-form-label">
            Tanggal Masuk
        </label>
        <div class="col-sm-10">
            <input type="datetime-local" class="form-control" @bind="@Student.enrollmentDate"  @bind:format="yyyy-MM-ddTHH:mm"  />
            <ValidationMessage For = "@(()=>Student.enrollmentDate)"/>
        </div>
    </div>
    
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>
